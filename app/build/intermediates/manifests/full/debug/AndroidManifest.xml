<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tamier.serverproducts"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tamier.serverproducts.MainScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tamier.serverproducts.AllProductsActivity"
            android:label="@string/title_activity_all_products" >
        </activity>
        <activity
            android:name="com.tamier.serverproducts.NewProductActivity"
            android:label="@string/title_activity_new_product" >
        </activity>
        <activity
            android:name="com.tamier.serverproducts.EditProductActivity"
            android:label="@string/title_activity_edit_product" >
        </activity>
    </application>

</manifest>